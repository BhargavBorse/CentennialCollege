<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminRegistration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="Admin Registration"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:layout_marginTop="100dp"
                android:textColor="@color/green">
            </TextView>

            <EditText
                android:id="@+id/adminRegisterFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter First Name"
                >
            </EditText>
            <EditText
                android:id="@+id/adminRegisterLastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Last Name"
                >
            </EditText>

            <EditText
                android:id="@+id/adminRegisterUserName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter User Name"
                >
            </EditText>

            <EditText
                android:id="@+id/adminRegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                >
            </EditText>


            <Button
                android:id="@+id/adminRegisterButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Register"
                android:textAlignment="center"
                android:textColor="@color/white">
            </Button>


            <Button
                android:id="@+id/adminRegisterBackButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Go To Login Page"
                android:textAlignment="center"
                android:textColor="@color/white">
            </Button>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>